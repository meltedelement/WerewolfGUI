<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Active Player Information -->
    <TextView
        android:id="@+id/textViewActivePlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Player: [Name]"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewActivePlayerRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: [Role]"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Container for Player Buttons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutPlayerButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
    <Button
        android:id="@+id/buttonProceedToDaytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to Daytime Actions"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
